<% if logged_in? %>
  <%= render "tasks/tasks", incompleted_tasks: @incompleted_tasks, completed_tasks: @completed_tasks %>
<% else %>
  <div class="text-center">
    <h3>ログイン</h3>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
      <%= form_for(:session, url:login_path) do |f| %>
        
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        
        <%= f.submit "ログインする", class: "btn btn-primary btn-black form-control" %>
      
      <% end %>
      <h6 class="text-right"><%= link_to "新しくアカウントを作成する。  (屮´､ゝ`)屮 ｵｲﾃﾞﾅｽｯﾃ", signup_path %></h6>
        
    </div>
  </div>
<% end %>