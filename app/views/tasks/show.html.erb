<h1>タスク<%= @task.id %>の詳細</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
</table>

<button class="btn btn-default" type="submit"> <%= link_to "タスク一覧に戻る",root_path %> </button>
<button class="btn btn-default" type="submit"> <%= link_to "タスクの編集",edit_task_path %> </button>
<button class="btn btn-danger" type="submit"> <%= link_to "タスクの削除","", method: :delete %> </button>
